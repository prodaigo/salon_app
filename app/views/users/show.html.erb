<%= render 'shared/header' %>

<div class="myPage">
  <% if current_user == @user %>
    <h2>My page</h2>
  <% else %>
    <h2>User page</h2>
  <% end %>
  <div class="myPage-content"><i class="fa-solid fa-scissors"></i>nickname :   <%= @user.nickname %></div>
  <div class="myPage-content"><i class="fa-solid fa-scissors"></i>email :   <%= @user.email %></div>
  <%# <p><i class="fa-solid fa-scissors"></i>gender: <%= @user.gender</p>  %>
  <div class="myPage-content"><i class="fa-solid fa-scissors"></i>birthday :   <%= @user.birthday %></div>
  <%# <p><i class="fa-solid fa-scissors"></i>profile: <%= @user.profile</p>  %>
  <% if user_signed_in? %>
    <% if current_user == @user || current_user.admin? %>
      <div class='edit-btn'>
        <%= link_to 'Edit', edit_user_path(@user), class: "edit" %>
      </div>
    <% end %>
  <% end %>
</div>

<%= render 'shared/footer' %>