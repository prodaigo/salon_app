<%= render 'shared/header' %>

<div class="contents row">
  <h2>Edit</h2>
  <div class="container">
    <%= form_with model: @user, url: user_path(current_user.id), id: 'edit_user', class: 'edit_user', local: true do |f| %>
      <div class="field">
        <%= f.label :nickname %><br />
        <%= f.text_area :nickname %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </div>

      <div class="actions">
        <%= f.submit "Save" %>
      </div>
    <% end %>
  </div>
</div>

<%= render 'shared/footer' %>